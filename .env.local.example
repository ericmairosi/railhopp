# Darwin Kafka (Rail Data Marketplace / Confluent Cloud)
# Do NOT commit real secrets. Copy to .env.local and fill values locally.
DARWIN_KAFKA_ENABLED=true
DARWIN_KAFKA_BROKERS=pkc-xxxxx.gcp.confluent.cloud:9092
DARWIN_KAFKA_USERNAME=<<CONSUMER_USERNAME>>
DARWIN_KAFKA_PASSWORD=<<CONSUMER_PASSWORD>>
DARWIN_KAFKA_TOPIC=prod-1010-Darwin-Train-Information-Push-Port-JSON
DARWIN_KAFKA_GROUP_ID=railhopp-darwin-dev
DARWIN_KAFKA_SASL_MECHANISM=plain
DARWIN_KAFKA_SSL=true
# Optional: path to CA bundle file (PEM). Example: certs/rdm-ca.pem
DARWIN_KAFKA_CA_PATH=

# Knowledge Station (optional JSON source)
KNOWLEDGE_STATION_ENABLED=true
KNOWLEDGE_STATION_API_URL=<<YOUR_KS_API_URL>>
KNOWLEDGE_STATION_API_TOKEN=<<YOUR_KS_TOKEN>>

# Rail Data Marketplace Knowledgebase (preferred for station list)
KNOWLEDGEBASE_API_URL=https://api1.raildata.org.uk/1010-knowledgebase-stations-xml-feed1_1
KNOWLEDGEBASE_API_KEY=<<YOUR_RDM_API_KEY>>
