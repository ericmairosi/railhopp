# Production Environment Variables Template
# Copy this to your deployment platform's environment variables section

# Database Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# UK Rail API Keys
DARWIN_API_KEY=your_darwin_api_key
NETWORK_RAIL_USERNAME=your_network_rail_username
NETWORK_RAIL_PASSWORD=your_network_rail_password

# Network Rail Configuration
NETWORK_RAIL_API_URL=https://api.rtt.io/api/v1/json
NETWORK_RAIL_STOMP_URL=stomp://datafeeds.networkrail.co.uk:61618
NETWORK_RAIL_ENABLED=true

# National Rail APIs
NATIONAL_RAIL_API_KEY=your_national_rail_api_key
NATIONAL_RAIL_API_URL=https://api.nationalrail.co.uk/api
NATIONAL_RAIL_ENABLED=true

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
NEXT_PUBLIC_WEBSOCKET_URL=wss://your-websocket-domain.com

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# Monitoring & Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
SENTRY_DSN=your_sentry_dsn
MONITORING_ENABLED=true

# Performance Configuration
API_RATE_LIMITING=true
API_CACHE_ENABLED=true
API_CACHE_TTL=30

# Redis Configuration (for production caching)
REDIS_URL=your_redis_url
REDIS_TOKEN=your_redis_token
REDIS_ENABLED=true
