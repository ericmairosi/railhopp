{
  "name": "railhopp",
  "version": "0.1.0",
  "private": true,
  "description": "Modern railway web application with real-time UK train information",
  "keywords": [
    "railway",
    "trains",
    "real-time",
    "uk",
    "transport"
  ],
  "author": "Eric M",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "fly:deploy": "fly deploy",
    "fly:open": "fly open",
    "fly:logs": "fly logs",
    "fly:status": "fly status",
    "fly:ssh": "fly ssh console",
    "fly:validate": "bash ./scripts/validate-deployment.sh",
    "fly:broker:deploy": "bash ./scripts/fly-broker.sh deploy",
    "fly:broker:logs": "bash ./scripts/fly-broker.sh logs",
    "fly:broker:open": "bash ./scripts/fly-broker.sh open",
    "fly:broker:status": "bash ./scripts/fly-broker.sh status",
    "fly:broker:ssh": "bash ./scripts/fly-broker.sh ssh"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
